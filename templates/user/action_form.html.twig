{% extends "base.html.twig" %}
{% block title %}Service | User{% endblock %}
{% block body %}
 <h1>Bienvenu,{% if editMode %}Modifier un User{% else %} Ajouter un User{% endif %} </h1>
 <div class="col-12">
    {% for message in app.flashes('success') %}
    <div class="alert alert-success"> {{message}} </div> 
    {% endfor %}
        {% for message in app.flashes('danger') %}
    <div class="alert alert-danger"> {{message}} </div> 
    {% endfor %}
 </div>
<section id="page-sx">
        <div class="container">
            <div class="row">
                <div class="col-12">
                    <div class="post-box">
                      {{form_start(formUser,{'method':'POST'})}} 
                            <fieldset >
                                <legend >Informations personnelles</legend>
                               <div class="form-row align-items-end">
                                    <div class="form-group col-md-5">
                                        
                                    {{form_row(formUser.username, {'label':'Username','attr': {'placeholder':"nom complet "}})}}
                            
                                    </div>
                                    <div class="form-group col-md-6">
                                        
                                    {{form_row(formUser.email, {'label':'Email','attr':{'placeholder':"email"}})}}
                            
                                    </div>
                                </div>
                                <div class="form-row align-items-end">
                                    <div class="form-group col-md-5">
                                        
                                    {{form_row(formUser.password, {'label':'password','attr': {'placeholder':"password "}})}}
                            
                                    </div>
                                    <div class="form-group col-md-4">
                                        
                                    {{form_row(formUser.roles, {'label':'Rôle','attr':{'placeholder':"Rôle"}})}}
                            
                                    </div>
                                    <div class="form-group col-md-2">
                                        
                                    {{form_row(formUser.enabled, {'label':'enabled','attr':{'placeholder':"enabled"}})}}
                            
                                    </div>
                                </div>
  
                            <fieldset >
                              
                            <div class="text-center">
                                <button type="submit" class="btn btn-success">{% if editMode %} Modification{% else %} Ajouter{% endif %}</button>
                            </div>
                        {{form_end(formUser)}} 
{% endblock %}