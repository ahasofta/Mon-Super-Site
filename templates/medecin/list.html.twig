{% extends "base.html.twig" %}
{% block title %}Service |liste des medecins{% endblock %}
{% block body %}
<h1>la liste des utilisateurs<h1>

    <table class="table">
        <thead class="thead-light">
            <tr>
                <th scope="col">Id</th>
                <th scope="col">Nom</th>
                <th scope="col">Prenom</th>
                <th scope="col">Specialiste</th>
                <th scope="col">Localisation</th>
                <th scope="col">utilisateur</th>
                <th scope="col">patients</th>
                <th scope="col">actions</th>
            </tr>
        </thead>
        <tbody>
        {% for medecin in medecins %}
            <tr>
                <th scope="row">{{medecin.id}}</th>
                <td>{{medecin.getNomMed()}}</td>
                <td>{{medecin.getPrenomMed()}}</td>
                <td>{{medecin.getSpecialite()}}</td>
                <td>{{medecin.getLocalisation()}}</td>
                <td>
                    <a href="{{path('update_ActionMedecin',{'id': medecin.id})}}">modifier</a>
                    <a href="{{path('medecin_show',{'id':medecin.id})}}">voir</a>
                    <a href="{{path('medecin_delete',{'id':medecin.id})}}">supprimer</a>
                </td>
            </tr>
        {% endfor %}
            
        
        </tbody>
    </table>

{% endblock %}