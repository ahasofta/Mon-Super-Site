{% extends "base.html.twig" %}
{% block title %}Service | Partenaire{% endblock %}
{% block body %}
<div class="container mt-4">
 <h1>{% if editMode %}Modifier un Partenaire {% else %} Ajouter un nouveau partenaire{% endif %} </h1>
 </div>
 <div class="col-12">
    {% for message in app.flashes('success') %}
    <div class="alert alert-success"> {{message}} </div> 
    {% endfor %}
        {% for message in app.flashes('danger') %}
    <div class="alert alert-danger"> {{message}} </div> 
    {% endfor %}
 </div>
<section id="page-sx">
        <div class="container">
            <div class="row">
                <div class="col-12">
                    <div class="post-box">
                      {{form_start(formPartenaire,{'method':'POST'})}}
                      <br> 
                            <fieldset >
                                <legend >Renseigner ces informations</legend>
                               <div class="form-row align-items-end">
                                    <div class="form-group col-md-5">
                                        
                                    {{form_row(formPartenaire.id_partenaire, {'label':'Numéro (ID) partenaire ','attr': {'placeholder':"Numéro partenaire "}})}}
                            
                                    </div>
                                    <div class="form-group col-md-6">
                                        
                                    {{form_row(formPartenaire.nom_partenaire, {'label':'Nom du partenaire','attr':{'placeholder':"Nom du partenaire"}})}}
                            
                                    </div>
                                    <div class="form-group col-md-6">
                                        
                                    {{form_row(formPartenaire.user, {'label':"choisissez l'utilisteur",'attr':{'placeholder':"choisissez l'utilisteur"}})}}
                            
                                    </div>
                                </div>
                               
                            <fieldset >
                              
                            <div class="">
                                <button type="submit" class="btn btn-primary col-5">{% if editMode %}Modification{% else %}Ajouter  {% endif %}</button>
                            </div>
                        {{form_end(formPartenaire)}} 
{% endblock %}