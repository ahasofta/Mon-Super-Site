{% extends "base.html.twig" %}
{% block title %}Service | Partenaire{% endblock %}
{% block body %}
 <h1>Bienvenu,{% if editMode %}Modifier un Partenaire {% else %} Ajouter un Partenaire{% endif %} </h1>
 <div class="col-12">
    {% for message in app.flashes('success') %}
    <div class="alert alert-success"> {{message}} </div> 
    {% endfor %}
        {% for message in app.flashes('danger') %}
    <div class="alert alert-danger"> {{message}} </div> 
    {% endfor %}
 </div>
<section id="page-sx">
        <div class="container">
            <div class="row">
                <div class="col-12">
                    <div class="post-box">
                      {{form_start(formPartenaire,{'method':'POST'})}} 
                            <fieldset >
                                <legend >Informations personnelles</legend>
                               <div class="form-row align-items-end">
                                    <div class="form-group col-md-5">
                                        
                                    {{form_row(formPartenaire.id_partenaire, {'label':'numero partenaire ','attr': {'placeholder':"numero partenaire "}})}}
                            
                                    </div>
                                    <div class="form-group col-md-6">
                                        
                                    {{form_row(formPartenaire.nom_partenaire, {'label':'Pr√©nom','attr':{'placeholder':"prenom"}})}}
                            
                                    </div>
                                </div>
                               
                            <fieldset >
                              
                            <div class="text-center">
                                <button type="submit" class="btn btn-success">{% if editMode %}Modification{% else %}Ajouter  {% endif %}</button>
                            </div>
                        {{form_end(formPartenaire)}} 
{% endblock %}